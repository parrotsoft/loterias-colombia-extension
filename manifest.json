{
    "manifest_version": 3,
    "name": "Resultados Loterias",
    "version": "1.0.1",
    "description": "Extensión para consultar resultados de loterías de Colombia.",
    "permissions": [
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "host_permissions": [
        "https://api-resultadosloterias.com/*"
    ]
}